@model maqa.Controller_view.Authorview
@using Microsoft.AspNetCore.Authorization;
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "تعديل";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
    var result = AuthorizationService.AuthorizeAsync(User, "Admin");
}

<h1>تعديل البيانات</h1>

<h4>تعديل بيانات الناشرون</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit"enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserId" type="hidden" class="control-label"></label>
                <input asp-for="UserId" type="hidden" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfileImgUrl" class="control-label"></label>
                <input asp-for="ProfileImgUrl" type="file" class="form-control" />
                <span asp-validation-for="ProfileImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bio" class="control-label"></label>
                <input asp-for="Bio"  type="text" class="form-control" />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Facebook" class="control-label"></label>
                <input asp-for="Facebook" class="form-control" />
                <span asp-validation-for="Facebook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instgram" class="control-label"></label>
                <input asp-for="Instgram" class="form-control" />
                <span asp-validation-for="Instgram" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Twitter" class="control-label"></label>
                <input asp-for="Twitter" class="form-control" />
                <span asp-validation-for="Twitter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (result.Result.Succeeded)
{
    <div>
        <a asp-action="Index">الرجوع الى المستخدمين</a>
    </div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

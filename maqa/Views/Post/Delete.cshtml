@model maqa.controler.AuthorPost

@{
    ViewData["Title"] = "حذف";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 style="font-family:cairo">حذف</h1>

<h3 style="font-family:cairo">هل انت متأكد انك تريد الحزف</h3>
<div>
    <h4 style="font-family:cairo">بيانات المشاركة</h4>
    <hr />
    <dl class="row">
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostCategory)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Posttitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Posttitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostDiscription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostDiscription)
        </dd>
        <dt class="col-sm-2">
            <img src="~/images/@Model.PostImgUrl" class="img-thumbnail" />
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostImgUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AddeddDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AddeddDate)
        </dd>
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

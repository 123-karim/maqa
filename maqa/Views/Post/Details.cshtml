@model maqa.controler.AuthorPost

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 style="font-family:cairo">التفاصيل</h1>

<div>
    <h4 style="font-family:cairo">تفاصيل المشاركة</h4>
    <hr />
    <dl class="row">
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostCategory)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Posttitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Posttitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostDiscription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostDiscription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostImgUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.PostImgUrl" class="img-fluid"  />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AddeddDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AddeddDate)
        </dd>
       
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">تعديل</a> |
    <a asp-action="Index">الرجوع الى المشاركات</a>
</div>
